<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tutudao_lib_titlebar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:visibility="visible">
            <TextView
                android:id="@+id/tutudao_lib_titlebar_title_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"/>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tutudao_lib_titlebar_title_text"
                android:visibility="visible">
                <TextView
                    android:id="@+id/tutudao_lib_titlebar_right_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#00D2E0"
                    android:textSize="15sp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/tutudao_lib_titlebar_right_red_dot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignRight="@id/tutudao_lib_titlebar_right_text"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="2dp"
                    android:src="@android:drawable/ic_notification_overlay"
                    android:visibility="gone"/>
            </RelativeLayout>
        <View
            android:id="@+id/titlebar_underline"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/title_bar_shadow_shape"/>

        <TextView
            android:id="@+id/tutudao_lib_titlebar_left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ic_arrow_back"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#00D2E0"
            android:textSize="15sp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tv_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="50dp"
            android:text="返回"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:textColor="#FFB9BAC4"
            android:textSize="17sp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>